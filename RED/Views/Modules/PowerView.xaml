<UserControl x:Class="RED.Views.Modules.PowerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:cal="http://www.caliburnproject.org"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <StackPanel>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Button Grid.Row="0" Grid.Column="0" Content="On" Click="EnableButton_Click" Tag="0" />
            <Button Grid.Row="0" Grid.Column="1" Content="Off" Click="DisableButton_Click" Tag="0" />
            <Label Grid.Row="0" Grid.Column="2">Motor 1</Label>
            <Label Grid.Row="0" Grid.Column="3" x:Name="Motor1Current" ContentStringFormat="{}{0:00.0} A" HorizontalContentAlignment="Right" />
            <Button Grid.Row="1" Grid.Column="0" Content="On" Click="EnableButton_Click" Tag="1" />
            <Button Grid.Row="1" Grid.Column="1" Content="Off" Click="DisableButton_Click" Tag="1" />
            <Label Grid.Row="1" Grid.Column="2">Motor 2</Label>
            <Label Grid.Row="1" Grid.Column="3" x:Name="Motor2Current" ContentStringFormat="{}{0:00.0} A" HorizontalContentAlignment="Right" />
            <Button Grid.Row="2" Grid.Column="0" Content="On" Click="EnableButton_Click" Tag="2" />
            <Button Grid.Row="2" Grid.Column="1" Content="Off" Click="DisableButton_Click" Tag="2" />
            <Label Grid.Row="2" Grid.Column="2">Motor 3</Label>
            <Label Grid.Row="2" Grid.Column="3" x:Name="Motor3Current" ContentStringFormat="{}{0:00.0} A" HorizontalContentAlignment="Right" />
            <Button Grid.Row="3" Grid.Column="0" Content="On" Click="EnableButton_Click" Tag="3" />
            <Button Grid.Row="3" Grid.Column="1" Content="Off" Click="DisableButton_Click" Tag="3" />
            <Label Grid.Row="3" Grid.Column="2">Motor 4</Label>
            <Label Grid.Row="3" Grid.Column="3" x:Name="Motor4Current" ContentStringFormat="{}{0:00.0} A" HorizontalContentAlignment="Right" />
            <Button Grid.Row="4" Grid.Column="0" Content="On" Click="EnableButton_Click" Tag="4" />
            <Button Grid.Row="4" Grid.Column="1" Content="Off" Click="DisableButton_Click" Tag="4" />
            <Label Grid.Row="4" Grid.Column="2">Motor 5</Label>
            <Label Grid.Row="4" Grid.Column="3" x:Name="Motor5Current" ContentStringFormat="{}{0:00.0} A" HorizontalContentAlignment="Right" />
            <Button Grid.Row="5" Grid.Column="0" Content="On" Click="EnableButton_Click" Tag="5" />
            <Button Grid.Row="5" Grid.Column="1" Content="Off" Click="DisableButton_Click" Tag="5" />
            <Label Grid.Row="5" Grid.Column="2">Motor 6</Label>
            <Label Grid.Row="5" Grid.Column="3" x:Name="Motor6Current" ContentStringFormat="{}{0:00.0} A" HorizontalContentAlignment="Right" />

            <Button Grid.Row="6" Grid.Column="0" Content="On" Click="EnableButton_Click" Tag="7" />
            <Button Grid.Row="6" Grid.Column="1" Content="Off" Click="DisableButton_Click" Tag="7" />
            <Label Grid.Row="6" Grid.Column="2">Extra</Label>
            <Label Grid.Row="6" Grid.Column="3" x:Name="ExtraCurrent" ContentStringFormat="{}{0:00.0} A" HorizontalContentAlignment="Right" />
            <Button Grid.Row="7" Grid.Column="0" Content="On" Click="EnableButton_Click" Tag="8" />
            <Button Grid.Row="7" Grid.Column="1" Content="Off" Click="DisableButton_Click" Tag="8" />
            <Label Grid.Row="7" Grid.Column="2">Actuation</Label>
            <Label Grid.Row="7" Grid.Column="3" x:Name="ActuationCurrent" ContentStringFormat="{}{0:00.0} A" HorizontalContentAlignment="Right" />
            <Button Grid.Row="8" Grid.Column="0" Content="On" Click="EnableButton_Click" Tag="9" />
            <Button Grid.Row="8" Grid.Column="1" Content="Off" Click="DisableButton_Click" Tag="9" />
            <Label Grid.Row="8" Grid.Column="2">Logic</Label>
            <Label Grid.Row="8" Grid.Column="3" x:Name="LogicCurrent" ContentStringFormat="{}{0:00.0} A" HorizontalContentAlignment="Right" />
            <Button Grid.Row="9" Grid.Column="0" Content="On" Click="EnableButton_Click" Tag="10" />
            <Button Grid.Row="9" Grid.Column="1" Content="Off" Click="DisableButton_Click" Tag="10" />
            <Label Grid.Row="9" Grid.Column="2">Comms</Label>
            <Label Grid.Row="9" Grid.Column="3" x:Name="CommunicationsCurrent" ContentStringFormat="{}{0:00.0} A" HorizontalContentAlignment="Right" />

            <Button Grid.Row="10" Grid.Column="0" Content="On" Click="EnableButton_Click" Tag="11" />
            <Button Grid.Row="10" Grid.Column="1" Content="Off" Click="DisableButton_Click" Tag="11" />
            <Label Grid.Row="10" Grid.Column="2">Comm Logic</Label>
            <Button Grid.Row="11" Grid.Column="0" cal:Message.Attach="FanControl('True')">On</Button>
            <Button Grid.Row="11" Grid.Column="1" cal:Message.Attach="FanControl('False')">Off</Button>
            <Label Grid.Row="11" Grid.Column="2">Fans</Label>
            <Button Grid.Row="12" Grid.Column="0" cal:Message.Attach="BuzzerControl('True')">On</Button>
            <Button Grid.Row="12" Grid.Column="1" cal:Message.Attach="BuzzerControl('False')">Off</Button>
            <Label Grid.Row="12" Grid.Column="2">BMS Buzzer</Label>

            <Label Grid.Row="13" Grid.Column="2">Input Voltage</Label>
            <Label Grid.Row="13" Grid.Column="3" x:Name="InputVoltage" ContentStringFormat="{}{0:00.0} V" HorizontalContentAlignment="Right" />
            <Label Grid.Row="14" Grid.Column="2">Total Pack Current</Label>
            <Label Grid.Row="14" Grid.Column="3" x:Name="TotalPackCurrent" ContentStringFormat="{}{0:00.0} A" HorizontalContentAlignment="Right" />

            <Label Grid.Row="15" Grid.Column="2">BMS Temp 1</Label>
            <Label Grid.Row="15" Grid.Column="3" x:Name="BMSTemperature1" ContentStringFormat="{}{0:0.0&#176;}" HorizontalContentAlignment="Right" />
            <Label Grid.Row="16" Grid.Column="2">BMS Temp 2</Label>
            <Label Grid.Row="16" Grid.Column="3" x:Name="BMSTemperature2" ContentStringFormat="{}{0:0.0&#176;}" HorizontalContentAlignment="Right" />
        </Grid>
        <UniformGrid Rows="1">
            <Button Grid.Row="0" Grid.Column="0" Click="RebootButton_Click">Reboot</Button>
            <Button Grid.Row="0" Grid.Column="1" Click="ShutDownButton_Click">Shut Down</Button>
        </UniformGrid>
        <UniformGrid Grid.Row="4" Grid.Column="1" Rows="1">
            <Button x:Name="SaveFileStart">Start Log</Button>
            <Button x:Name="SaveFileStop">Stop Log</Button>
        </UniformGrid>
        <Expander Header="Other">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Button Grid.Row="0" Grid.Column="0" Content="On" Click="EnableButton_Click" Tag="6" />
                <Button Grid.Row="0" Grid.Column="1" Content="Off" Click="DisableButton_Click" Tag="6" />
                <Label Grid.Row="0" Grid.Column="2">Motor 7</Label>
                <Label Grid.Row="0" Grid.Column="3" x:Name="Motor7Current" ContentStringFormat="{}{0:00.0} A" HorizontalContentAlignment="Right" />
                <Button Grid.Row="1" Grid.Column="0" Content="On" Click="EnableButton_Click" Tag="7" />
                <Button Grid.Row="1" Grid.Column="1" Content="Off" Click="DisableButton_Click" Tag="7" />
                <Label Grid.Row="1" Grid.Column="2">Motor 8</Label>
                <Label Grid.Row="1" Grid.Column="3" x:Name="Motor8Current" ContentStringFormat="{}{0:00.0} A" HorizontalContentAlignment="Right" />
                <Button Grid.Row="2" Grid.Column="0" Content="On" Click="EnableButton_Click" Tag="8" />
                <Button Grid.Row="2" Grid.Column="1" Content="Off" Click="DisableButton_Click" Tag="8" />
                <Label Grid.Row="2" Grid.Column="2">Bus 5V</Label>
                <Label Grid.Row="2" Grid.Column="3" x:Name="Bus5VCurrent" ContentStringFormat="{}{0:00.0} A" HorizontalContentAlignment="Right" />
                <Button Grid.Row="3" Grid.Column="0" Content="On" Click="EnableButton_Click" Tag="9" />
                <Button Grid.Row="3" Grid.Column="1" Content="Off" Click="DisableButton_Click" Tag="9" />
                <Label Grid.Row="3" Grid.Column="2">Bus 12V</Label>
                <Label Grid.Row="3" Grid.Column="3" x:Name="Bus12VCurrent" ContentStringFormat="{}{0:00.0} A" HorizontalContentAlignment="Right" />
                <Label Grid.Row="4" Grid.Column="2">Cell 1</Label>
                <Label Grid.Row="4" Grid.Column="3" x:Name="Cell1Voltage" ContentStringFormat="{}{0:00.0} V" HorizontalContentAlignment="Right" />
                <Label Grid.Row="5" Grid.Column="2">Cell 2</Label>
                <Label Grid.Row="5" Grid.Column="3" x:Name="Cell2Voltage" ContentStringFormat="{}{0:00.0} V" HorizontalContentAlignment="Right" />
                <Label Grid.Row="6" Grid.Column="2">Cell 3</Label>
                <Label Grid.Row="6" Grid.Column="3" x:Name="Cell3Voltage" ContentStringFormat="{}{0:00.0} V" HorizontalContentAlignment="Right" />
                <Label Grid.Row="7" Grid.Column="2">Cell 4</Label>
                <Label Grid.Row="7" Grid.Column="3" x:Name="Cell4Voltage" ContentStringFormat="{}{0:00.0} V" HorizontalContentAlignment="Right" />
                <Label Grid.Row="8" Grid.Column="2">Cell 5</Label>
                <Label Grid.Row="8" Grid.Column="3" x:Name="Cell5Voltage" ContentStringFormat="{}{0:00.0} V" HorizontalContentAlignment="Right" />
                <Label Grid.Row="9" Grid.Column="2">Cell 6</Label>
                <Label Grid.Row="9" Grid.Column="3" x:Name="Cell6Voltage" ContentStringFormat="{}{0:00.0} V" HorizontalContentAlignment="Right" />
                <Label Grid.Row="10" Grid.Column="2">Cell 7</Label>
                <Label Grid.Row="10" Grid.Column="3" x:Name="Cell7Voltage" ContentStringFormat="{}{0:00.0} V" HorizontalContentAlignment="Right" />
                <Label Grid.Row="11" Grid.Column="2">Cell 8</Label>
                <Label Grid.Row="11" Grid.Column="3" x:Name="Cell8Voltage" ContentStringFormat="{}{0:00.0} V" HorizontalContentAlignment="Right" />
                <Label Grid.Row="12" Grid.Column="2">Total Pack Voltage</Label>
                <Label Grid.Row="12" Grid.Column="3" x:Name="TotalPackVoltage" ContentStringFormat="{}{0:00.0} V" HorizontalContentAlignment="Right" />
            </Grid>
        </Expander>
    </StackPanel>
</UserControl>
