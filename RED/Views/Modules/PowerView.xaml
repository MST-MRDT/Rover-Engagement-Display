<UserControl x:Class="RED.Views.Modules.PowerView"
             xmlns:addons="clr-namespace:RED.Addons"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:cal="http://www.caliburnproject.org"
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="350">
    <UserControl.Resources>
        <addons:AmpToColorValueConverter x:Key="AmpConverter" />
        <addons:TotalAmpToColorValueConverter x:Key="TotalAmpConverter" />
        <addons:VoltToColorValueConverter x:Key="VoltConverter" />
        <addons:TotalVoltToColorValueConverter x:Key="TotalVoltConverter" />
        <addons:TempToColorValueConverter x:Key="TempConverter" />


        <Style x:Key="EnableBtn" TargetType="Button" BasedOn="{StaticResource MetroButton}">
            <Setter Property="Content" Value="On" />
            <EventSetter Event="Click" Handler="EnableButton_Click" />
        </Style>
        <Style x:Key="DisableBtn" TargetType="Button" BasedOn="{StaticResource MetroButton}">
            <Setter Property="Content" Value="Off" />
            <EventSetter Event="Click" Handler="DisableButton_Click" />

        </Style>
        <Style x:Key="CurrentTelem" TargetType="Label">
            <Setter Property="ContentStringFormat" Value="{}{0:00.0} A" />
            <Setter Property="HorizontalContentAlignment" Value="Right" />
        </Style>

        <Style x:Key="VoltageTelem" TargetType="Label">
            <Setter Property="ContentStringFormat" Value="{}{0:00.0} V" />
            <Setter Property="HorizontalContentAlignment" Value="Right" />
        </Style>
        <Style x:Key="TemperatureTelem" TargetType="Label">
            <Setter Property="ContentStringFormat" Value="{}{0:0.0&#176;}" />
            <Setter Property="HorizontalContentAlignment" Value="Right" />
        </Style>

    </UserControl.Resources>
    <StackPanel>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="*" />

                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Button Grid.Row="0" Grid.Column="0" Style="{StaticResource EnableBtn}" Tag="0" />
            <Button Grid.Row="0" Grid.Column="1" Style="{StaticResource DisableBtn}" Tag="0" />
            <Label Grid.Row="0" Grid.Column="2" Background="{Binding Path=Motor1Current, 
                   Converter={StaticResource AmpConverter}, Mode=Default}">Motor 1</Label>
            <Label Grid.Row="0" Grid.Column="3" Style="{StaticResource CurrentTelem}" x:Name="Motor1Current"
                   Background="{Binding Path=Motor1Current, Converter={StaticResource AmpConverter}, Mode=Default}"/>

            <Button Grid.Row="0" Grid.Column="4" Style="{StaticResource EnableBtn}" Tag="1" />
            <Button Grid.Row="0" Grid.Column="5" Style="{StaticResource DisableBtn}" Tag="1" />
            <Label Grid.Row="0" Grid.Column="6" Background="{Binding Path=Motor2Current, 
                    Converter={StaticResource AmpConverter}, Mode=Default}">Motor 2</Label>
            <Label Grid.Row="0" Grid.Column="7" Style="{StaticResource CurrentTelem}" x:Name="Motor2Current" 
                   Background="{Binding Path=Motor2Current, Converter={StaticResource AmpConverter}, Mode=Default}"/>

            <Button Grid.Row="1" Grid.Column="0" Style="{StaticResource EnableBtn}" Tag="2" />
            <Button Grid.Row="1" Grid.Column="1" Style="{StaticResource DisableBtn}" Tag="2" />
            <Label Grid.Row="1" Grid.Column="2" Background="{Binding Path=Motor3Current, 
                    Converter={StaticResource AmpConverter}, Mode=Default}">Motor 3</Label>
            <Label Grid.Row="1" Grid.Column="3" Style="{StaticResource CurrentTelem}" x:Name="Motor3Current" 
                   Background="{Binding Path=Motor3Current, Converter={StaticResource AmpConverter}, Mode=Default}"/>

            <Button Grid.Row="1" Grid.Column="4" Style="{StaticResource EnableBtn}" Tag="3" />
            <Button Grid.Row="1" Grid.Column="5" Style="{StaticResource DisableBtn}" Tag="3" />
            <Label Grid.Row="1" Grid.Column="6" Background="{Binding Path=Motor4Current, 
                    Converter={StaticResource AmpConverter}, Mode=Default}">Motor 4</Label>
            <Label Grid.Row="1" Grid.Column="7" Style="{StaticResource CurrentTelem}" x:Name="Motor4Current" 
                   Background="{Binding Path=Motor4Current, Converter={StaticResource AmpConverter}, Mode=Default}"/>

            <Button Grid.Row="2" Grid.Column="0" Style="{StaticResource EnableBtn}" Tag="4" />
            <Button Grid.Row="2" Grid.Column="1" Style="{StaticResource DisableBtn}" Tag="4" />
            <Label Grid.Row="2" Grid.Column="2" Background="{Binding Path=Motor5Current, 
                    Converter={StaticResource AmpConverter}, Mode=Default}">Motor 5</Label>
            <Label Grid.Row="2" Grid.Column="3" Style="{StaticResource CurrentTelem}" x:Name="Motor5Current" 
                   Background="{Binding Path=Motor5Current, Converter={StaticResource AmpConverter}, Mode=Default}"/>

            <Button Grid.Row="2" Grid.Column="4" Style="{StaticResource EnableBtn}" Tag="5" />
            <Button Grid.Row="2" Grid.Column="5" Style="{StaticResource DisableBtn}" Tag="5" />
            <Label Grid.Row="2" Grid.Column="6" Background="{Binding Path=Motor6Current, 
                    Converter={StaticResource AmpConverter}, Mode=Default}">Motor 6</Label>
            <Label Grid.Row="2" Grid.Column="7" Style="{StaticResource CurrentTelem}" x:Name="Motor6Current" 
                   Background="{Binding Path=Motor6Current, Converter={StaticResource AmpConverter}, Mode=Default}"/>

            <Button Grid.Row="3" Grid.Column="0" Style="{StaticResource EnableBtn}" Tag="6" />
            <Button Grid.Row="3" Grid.Column="1" Style="{StaticResource DisableBtn}" Tag="6" />
            <Label Grid.Row="3" Grid.Column="2" Background="{Binding Path=Motor7Current, 
                    Converter={StaticResource AmpConverter}, Mode=Default}">Motor 7</Label>
            <Label Grid.Row="3" Grid.Column="3" Style="{StaticResource CurrentTelem}" x:Name="Motor7Current" 
                   Background="{Binding Path=Motor7Current, Converter={StaticResource AmpConverter}, Mode=Default}"/>

            <Button Grid.Row="3" Grid.Column="4" Style="{StaticResource EnableBtn}" Tag="7" />
            <Button Grid.Row="3" Grid.Column="5" Style="{StaticResource DisableBtn}" Tag="7" />
            <Label Grid.Row="3" Grid.Column="6" Background="{Binding Path=Motor8Current, 
                    Converter={StaticResource AmpConverter}, Mode=Default}">Motor 8</Label>
            <Label Grid.Row="3" Grid.Column="7" Style="{StaticResource CurrentTelem}" x:Name="Motor8Current" 
                   Background="{Binding Path=Motor8Current, Converter={StaticResource AmpConverter}, Mode=Default}"/>

            <Button Grid.Row="4" Grid.Column="0" Style="{StaticResource EnableBtn}" Tag="8" />
            <Button Grid.Row="4" Grid.Column="1" Style="{StaticResource DisableBtn}" Tag="8" />
            <Label Grid.Row="4" Grid.Column="2" Background="{Binding Path=ActuationCurrent, 
                    Converter={StaticResource AmpConverter}, Mode=Default}">Actuation</Label>
            <Label Grid.Row="4" Grid.Column="3" Style="{StaticResource CurrentTelem}" x:Name="ActuationCurrent" 
                   Background="{Binding Path=ActuationCurrent, Converter={StaticResource AmpConverter}, Mode=Default}"/>

            <Button Grid.Row="4" Grid.Column="4" Style="{StaticResource EnableBtn}" Tag="9" />
            <Button Grid.Row="4" Grid.Column="5" Style="{StaticResource DisableBtn}" Tag="9" />
            <Label Grid.Row="4" Grid.Column="6" Background="{Binding Path=LogicCurrent, 
                    Converter={StaticResource AmpConverter}, Mode=Default}">Logic</Label>
            <Label Grid.Row="4" Grid.Column="7" Style="{StaticResource CurrentTelem}" x:Name="LogicCurrent" 
                   Background="{Binding Path=LogicCurrent, Converter={StaticResource AmpConverter}, Mode=Default}"/>

            <Button Grid.Row="5" Grid.Column="0" Style="{StaticResource EnableBtn}" Tag="10" />
            <Button Grid.Row="5" Grid.Column="1" Style="{StaticResource DisableBtn}" Tag="10" />
            <Label Grid.Row="5" Grid.Column="2" Background="{Binding Path=CommunicationsCurrent, 
                    Converter={StaticResource AmpConverter}, Mode=Default}">Comms</Label>
            <Label Grid.Row="5" Grid.Column="3" Style="{StaticResource CurrentTelem}" x:Name="CommunicationsCurrent" 
                   Background="{Binding Path=CommunicationsCurrent, Converter={StaticResource AmpConverter}, Mode=Default}"/>

            <Button Grid.Row="5" Grid.Column="4" cal:Message.Attach="AllMotorPower('True')" Height="27" VerticalAlignment="Bottom">On</Button>
            <Button Grid.Row="5" Grid.Column="5" cal:Message.Attach="AllMotorPower('False')">Off</Button>
            <Label Grid.Row="5" Grid.Column="6">All motors</Label>

            <Button Grid.Row="6" Grid.Column="0" cal:Message.Attach="FanControl('True')">On</Button>
            <Button Grid.Row="6" Grid.Column="1" cal:Message.Attach="FanControl('False')">Off</Button>
            <Label Grid.Row="6" Grid.Column="2">Fans</Label>

            <Button Grid.Row="6" Grid.Column="4" cal:Message.Attach="BuzzerControl('True')" Height="27" VerticalAlignment="Bottom">On</Button>
            <Button Grid.Row="6" Grid.Column="5" cal:Message.Attach="BuzzerControl('False')">Off</Button>
            <Label Grid.Row="6" Grid.Column="6">BMS Buzzer</Label>            
            
            <Label Grid.Row="7" Grid.Column="2" Background="{Binding Path=InputVoltage,
                Converter={StaticResource TotalVoltConverter}, Mode=Default}">Input Voltage</Label>
            <Label Grid.Row="7" Grid.Column="3" Style="{StaticResource VoltageTelem}" x:Name="InputVoltage"
                   Background="{Binding Path=InputVoltage, Converter={StaticResource TotalVoltConverter}, Mode=Default}"/>

            <Label Grid.Row="7" Grid.Column="6" Background="{Binding Path=TotalPackCurrent, 
                    Converter={StaticResource AmpConverter}, Mode=Default}">Total Pack Current</Label>
            <Label Grid.Row="7" Grid.Column="7" Style="{StaticResource CurrentTelem}" x:Name="TotalPackCurrent" 
                   Background="{Binding Path=TotalPackCurrent, Converter={StaticResource TotalAmpConverter}, Mode=Default}"/>

            <Label Grid.Row="8" Grid.Column="2" Background="{Binding Path=BMSTemperature1,
                    Converter={StaticResource TempConverter}, Mode=Default}">BMS Temp 1</Label>
            <Label Grid.Row="8" Grid.Column="3" Style="{StaticResource TemperatureTelem}" x:Name="BMSTemperature1"
                   Background="{Binding Path=BMSTemperature1, Converter={StaticResource TempConverter}, Mode=Default}"/>

            <Label Grid.Row="8" Grid.Column="6" Background="{Binding Path=BMSTemperature2,
                    Converter={StaticResource TempConverter}, Mode=Default}">BMS Temp 2</Label>
            <Label Grid.Row="8" Grid.Column="7" Style="{StaticResource TemperatureTelem}" x:Name="BMSTemperature2" 
                   Background="{Binding Path=BMSTemperature2, Converter={StaticResource TempConverter}, Mode=Default}"/>
        </Grid>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Label Grid.Row="0" Grid.Column="0" Background="{Binding Path=Cell1Voltage, 
                Converter={StaticResource VoltConverter}, Mode=Default}">Cell 1</Label>
            <Label Grid.Row="0" Grid.Column="1" Style="{StaticResource VoltageTelem}" x:Name="Cell1Voltage" 
                   Background="{Binding Path=Cell1Voltage, Converter={StaticResource VoltConverter}, Mode=Default}"/>
            
            <Label Grid.Row="0" Grid.Column="2" Background="{Binding Path=Cell2Voltage,
                Converter={StaticResource VoltConverter}, Mode=Default}">Cell 2</Label>
            <Label Grid.Row="0" Grid.Column="3" Style="{StaticResource VoltageTelem}" x:Name="Cell2Voltage" 
                   Background="{Binding Path=Cell2Voltage, Converter={StaticResource VoltConverter}, Mode=Default}"/>

            <Label Grid.Row="0" Grid.Column="4" Background="{Binding Path=Cell3Voltage, 
                Converter={StaticResource VoltConverter}, Mode=Default}">Cell 3</Label>
            <Label Grid.Row="0" Grid.Column="5" Style="{StaticResource VoltageTelem}" x:Name="Cell3Voltage"
                   Background="{Binding Path=Cell3Voltage, Converter={StaticResource VoltConverter}, Mode=Default}"/>

            <Label Grid.Row="0" Grid.Column="6" Background="{Binding Path=Cell4Voltage, 
                Converter={StaticResource VoltConverter}, Mode=Default}">Cell 4</Label>
            <Label Grid.Row="0" Grid.Column="7" Style="{StaticResource VoltageTelem}" x:Name="Cell4Voltage" 
                   Background="{Binding Path=Cell4Voltage, Converter={StaticResource VoltConverter}, Mode=Default}"/>

            <Label Grid.Row="1" Grid.Column="0" Background="{Binding Path=Cell5Voltage, 
                Converter={StaticResource VoltConverter}, Mode=Default}">Cell 5</Label>
            <Label Grid.Row="1" Grid.Column="1" Style="{StaticResource VoltageTelem}" x:Name="Cell5Voltage" 
                   Background="{Binding Path=Cell5Voltage, Converter={StaticResource VoltConverter}, Mode=Default}"/>

            <Label Grid.Row="1" Grid.Column="2" Background="{Binding Path=Cell6Voltage, 
                Converter={StaticResource VoltConverter}, Mode=Default}">Cell 6</Label>
            <Label Grid.Row="1" Grid.Column="3" Style="{StaticResource VoltageTelem}" x:Name="Cell6Voltage" 
                   Background="{Binding Path=Cell6Voltage, Converter={StaticResource VoltConverter}, Mode=Default}"/>

            <Label Grid.Row="1" Grid.Column="4" Background="{Binding Path=Cell7Voltage, 
                Converter={StaticResource VoltConverter}, Mode=Default}">Cell 7</Label>
            <Label Grid.Row="1" Grid.Column="5" Style="{StaticResource VoltageTelem}" x:Name="Cell7Voltage" 
                   Background="{Binding Path=Cell7Voltage, Converter={StaticResource VoltConverter}, Mode=Default}"/>

            <Label Grid.Row="1" Grid.Column="6" Background="{Binding Path=Cell8Voltage, 
                Converter={StaticResource VoltConverter}, Mode=Default}">Cell 8</Label>
            <Label Grid.Row="1" Grid.Column="7" Style="{StaticResource VoltageTelem}" x:Name="Cell8Voltage" 
                   Background="{Binding Path=Cell8Voltage, Converter={StaticResource VoltConverter}, Mode=Default}"/>

            <Label Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="3" Background="{Binding Path=TotalPackVoltage, 
                Converter={StaticResource TotalVoltConverter}, Mode=Default}">Total Pack Voltage</Label>
            <Label Grid.Row="2" Grid.Column="3" Style="{StaticResource VoltageTelem}" x:Name="TotalPackVoltage"
                   Background="{Binding Path=TotalPackVoltage, Converter={StaticResource TotalVoltConverter}, Mode=Default}"/>
            
        </Grid>
        <UniformGrid Rows="1">
            <Button Grid.Row="0" Grid.Column="0" Click="RebootButton_Click">Reboot</Button>
            <Button Grid.Row="0" Grid.Column="1" Click="ShutDownButton_Click">Shut Down</Button>
        </UniformGrid>
        <UniformGrid Rows="1">
            <Button x:Name="SaveFileStart">Start Log</Button>
            <Button x:Name="SaveFileStop">Stop Log</Button>
        </UniformGrid>
    </StackPanel>
</UserControl>
