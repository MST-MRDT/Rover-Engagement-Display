<UserControl x:Class="RED.Views.Modules.PowerView"
             xmlns:addons="clr-namespace:Core.Addons;assembly=Core"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:cal="http://www.caliburnproject.org"
             mc:Ignorable="d"
             d:DesignHeight="500" d:DesignWidth="350">
    <UserControl.Resources>
        <addons:ValueToColorConverter x:Key="ColorConverter" />


        <Style x:Key="EnableBtn" TargetType="ToggleButton" BasedOn="{StaticResource MetroToggleButton}">
            <Setter Property="Content" Value="Disabled" />
            <EventSetter Event="Click" Handler="EnableButton_Click" />
            <Style.Triggers>
                <Trigger Property="IsChecked" Value="True">
                    <Setter Property="Content" Value="Enabled"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="EnableBus15Btn" TargetType="ToggleButton" BasedOn="{StaticResource MetroToggleButton}">
            <Setter Property="Content" Value="Bus 15 Disabled" />
            <EventSetter Event="Click" Handler="EnableButton_Click" />
            <Style.Triggers>
                <Trigger Property="IsChecked" Value="True">
                    <Setter Property="Content" Value="Bus 15 Enabled"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="EnableBus16Btn" TargetType="ToggleButton" BasedOn="{StaticResource MetroToggleButton}">
            <Setter Property="Content" Value="Bus 16 Disabled" />
            <EventSetter Event="Click" Handler="EnableButton_Click" />
            <Style.Triggers>
                <Trigger Property="IsChecked" Value="True">
                    <Setter Property="Content" Value="Bus 16 Enabled"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="EnableBus17Btn" TargetType="ToggleButton" BasedOn="{StaticResource MetroToggleButton}">
            <Setter Property="Content" Value="Bus 17 Disabled" />
            <EventSetter Event="Click" Handler="EnableButton_Click" />
            <Style.Triggers>
                <Trigger Property="IsChecked" Value="True">
                    <Setter Property="Content" Value="Bus 17 Enabled"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="EnableBus18Btn" TargetType="ToggleButton" BasedOn="{StaticResource MetroToggleButton}">
            <Setter Property="Content" Value="Bus 18 Disabled" />
            <EventSetter Event="Click" Handler="EnableButton_Click" />
            <Style.Triggers>
                <Trigger Property="IsChecked" Value="True">
                    <Setter Property="Content" Value="Bus 18 Enabled"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="EnableBus19Btn" TargetType="ToggleButton" BasedOn="{StaticResource MetroToggleButton}">
            <Setter Property="Content" Value="Bus 19 Disabled" />
            <EventSetter Event="Click" Handler="EnableButton_Click" />
            <Style.Triggers>
                <Trigger Property="IsChecked" Value="True">
                    <Setter Property="Content" Value="Bus 19 Enabled"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="EnableBus20Btn" TargetType="ToggleButton" BasedOn="{StaticResource MetroToggleButton}">
            <Setter Property="Content" Value="Bus 20 Disabled" />
            <EventSetter Event="Click" Handler="EnableButton_Click" />
            <Style.Triggers>
                <Trigger Property="IsChecked" Value="True">
                    <Setter Property="Content" Value="Bus 20 Enabled"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="EnableBus21Btn" TargetType="ToggleButton" BasedOn="{StaticResource MetroToggleButton}">
            <Setter Property="Content" Value="Bus 21 Disabled" />
            <EventSetter Event="Click" Handler="EnableButton_Click" />
            <Style.Triggers>
                <Trigger Property="IsChecked" Value="True">
                    <Setter Property="Content" Value="Bus 21 Enabled"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="EnableBus22Btn" TargetType="ToggleButton" BasedOn="{StaticResource MetroToggleButton}">
            <Setter Property="Content" Value="Bus 22 Disabled" />
            <EventSetter Event="Click" Handler="EnableButton_Click" />
            <Style.Triggers>
                <Trigger Property="IsChecked" Value="True">
                    <Setter Property="Content" Value="Bus 22 Enabled"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="EnableBus23Btn" TargetType="ToggleButton" BasedOn="{StaticResource MetroToggleButton}">
            <Setter Property="Content" Value="Bus 23 Disabled" />
            <EventSetter Event="Click" Handler="EnableButton_Click" />
            <Style.Triggers>
                <Trigger Property="IsChecked" Value="True">
                    <Setter Property="Content" Value="Bus 23 Enabled"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="EnableBus24Btn" TargetType="ToggleButton" BasedOn="{StaticResource MetroToggleButton}">
            <Setter Property="Content" Value="Bus 24 Disabled" />
            <EventSetter Event="Click" Handler="EnableButton_Click" />
            <Style.Triggers>
                <Trigger Property="IsChecked" Value="True">
                    <Setter Property="Content" Value="Bus 24 Enabled"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="EnableBus25Btn" TargetType="ToggleButton" BasedOn="{StaticResource MetroToggleButton}">
            <Setter Property="Content" Value="Bus 25 Disabled" />
            <EventSetter Event="Click" Handler="EnableButton_Click" />
            <Style.Triggers>
                <Trigger Property="IsChecked" Value="True">
                    <Setter Property="Content" Value="Bus 25 Enabled"/>
                </Trigger>
            </Style.Triggers>
